{% include 'nav.html.twig' %}



{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; list-style-type: none;}
    .example-wrapper ul { list-style-type: none; }
    .example-wrapper li { background: #F5F5F5; padding: 2px 6px; border: 1px solid black; }
</style>

<h1>Liste des catégories de contact</h1>

  <div class="example-wrapper">

  <p><a href="{{ path('tag_new') }}">Ajouter une catégorie</a></p>
  
    <ul>
    {% for tag in tags %}
        <li>
        <p>{{ tag.name }}</p>
        <a href="{{ path('tag_delete',{'id': tag.id}) }}">Supprimer</a>
        <a href="{{ path('tag_update',{'id':tag.id}) }}">Modifier</a>

        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
